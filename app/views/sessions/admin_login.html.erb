				    <div class="col-sm-6">
				        <input name="username" type="text" class="form-control" id="name" />
				    </div>
				</div>
				<div class="form-group">
				    <label for="password" class="col-sm-3 control-label">
				        Password:</label>
				    <div class="col-sm-6">
				    	<input name="password" type="password" class="form-control" id="pw" />
				    </div>
				</div>
				<div class="row">
				    <div class="col-sm-12 modalButtons header">
				        <button type="submit" class="btn btn-primary btn-sm">
				            Upload</button>
				    </div>
				</div>
			</form>
		</div>
	<div class="col-sm-3">
	</div>
