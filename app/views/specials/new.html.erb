<style type="text/css">
	.landingRow{
		/*background: blue;*/
		background-image: url('/assets/background.png');
		height: 50px;
	}
	.landingDiv{
		/*color: white;*/
		margin-top: 80px;
		text-align: justify;
	}
	.left{
		text-align: center;
	}
	.secondRow{
		/*height: 5000px;*/
		text-align: center;
	}
	.headerTop{
		margin-top: 0px;
	}
	.modalButtons{
		text-align: center;
	}
</style>

<div class="row landingRow">
		<div class="col-sm-6 landingDiv left">
			<h1 class="headerTop">New Special:</h1>
		</div>
		<div class="col-sm-6 landingDiv right">
			<form class="form-horizontal" method="post" action="/specials" id="editForm" enctype="multipart/form-data">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<div class="form-group">
				    <label for="special[title]" class="col-sm-3 control-label">
				        Title:</label>
				    <div class="col-sm-6">
				        <input name="special[title]" type="text" class="form-control" id="name" />
				    </div>
				</div>
				<div class="form-group">
				    <label for="special[description]" class="col-sm-3 control-label">
				        Description</label>
				    <div class="col-sm-6">
				    	<textarea name="special[description]" class="form-control" id="description"></textarea>
				    </div>
				</div>
				<div class="form-group">
				    <label for="special[image]" class="col-sm-3 control-label">File</label>
				    <div class="col-sm-6">
				    	<input name="special[image]" type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp">
				    </div>
			  	</div>
				<div class="row">
				    <div class="col-sm-12 modalButtons header">
				        <button type="submit" class="btn btn-primary btn-sm">
				            Upload</button>
				    </div>
				</div>
			</form>
		</div>
</div>
<% if @special %>
<div class="row secondRow">
	<div class="col-sm-6">
	<h3><%= @special.title %></h3>
	<p><%= @special.description %></p>
	<%= image_tag @special.image.url %>
	</div>
	<div class="col-sm-6">
	</div>
</div>
<% end %>