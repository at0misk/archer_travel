<style type="text/css">
	.landingRow{
		background: linear-gradient(to right, #1cb1d1, #2d8195);
		/*background-image: url('/assets/background.png');*/
		height: 50px;
	}
	.landingDiv{
		/*color: white;*/
		margin-top: 80px;
		text-align: justify;
	}
	.left{
		text-align: center;
	}
	.secondRow{
		/*height: 5000px;*/
		text-align: center;
	}
	.headerTop{
		margin-top: 0px;
	}
	.modalButtons{
		text-align: center;
	}
	.specialHeader{
		margin-top: 0;
	}
	.btn-danger{
		float: right;
	}
</style>

<div class="row landingRow">
		<div class="col-sm-6 landingDiv left">
	<form class="form-horizontal" method="post" action="/specials/destroy/<%= @special.id %>">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<button class="btn btn-danger btn-sm" data-confirm="Destroy Special?">X</button>
	</form>
	<h2 class="specialHeader"><%= @special.title %></h2>
	<h3 class="specialHeader"><%= number_to_currency(@special.price) %></h3>
	<p><%= @special.description %></p>
	<%= image_tag @special.image.url %>
		</div>
		<div class="col-sm-6 landingDiv right">
			<form class="form-horizontal" method="post" action="/specials/<%= @special.id %>" id="editForm" enctype="multipart/form-data">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<input name="_method" value="patch" type="hidden">
				<div class="form-group">
				    <label for="special[title]" class="col-sm-3 control-label">
				        Title:</label>
				    <div class="col-sm-6">
				        <input name="special[title]" type="text" class="form-control" id="name" value="<%= @special.title %>"/>
				    </div>
				</div>
				<div class="form-group">
				    <label for="special[price]" class="col-sm-3 control-label">
				        Price</label>
				    <div class="col-sm-6">
				    	<input name="special[price]" type="number" class="form-control" id="price" min="0" step="any"/>
				    </div>
				</div>
				<div class="form-group">
				    <label for="special[description]" class="col-sm-3 control-label">
				        Description</label>
				    <div class="col-sm-6">
				    	<textarea rows="10" name="special[description]" class="form-control" id="description"><%= @special.description %></textarea>
				    </div>
				</div>
				<div class="form-group">
				    <label for="special[image]" class="col-sm-3 control-label">File</label>
				    <div class="col-sm-6">
				    	<input name="special[image]" type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp" value="special.image">
				    </div>
			  	</div>
				<div class="row">
				    <div class="col-sm-12 modalButtons header">
				        <button type="submit" class="btn btn-primary btn-sm">
				            Update</button>
				    </div>
				</div>
			</form>
		</div>
</div>